  <script>
    (function(){
      const form = document.getElementById('leadForm');
      const submitBtn = document.getElementById('submitBtn');
      const successMessage = document.getElementById('successMessage');
      const errorMessage = document.getElementById('errorMessage');

      function getVal(id){
        const el = document.getElementById(id);
        return el ? el.value.trim() : '';
      }

      function showSuccess(){
        successMessage.classList.add('show');
        errorMessage.style.display = 'none';
        successMessage.focus?.();
        // скрываем через 6 секунд для плавности
        setTimeout(()=> successMessage.classList.remove('show'), 6000);
      }
      function showError(msg){
        errorMessage.textContent = 'Ошибка: ' + msg;
        errorMessage.style.display = 'block';
        successMessage.classList.remove('show');
        setTimeout(()=> errorMessage.style.display = 'none', 8000);
      }

      form.addEventListener('submit', async function(e){
        e.preventDefault();
        // Блокируем кнопку, показываем busy state
        submitBtn.disabled = true;
        submitBtn.setAttribute('aria-busy','true');

        // Сбор данных
        const data = {
          name: getVal('name'),
          company: getVal('company'),
          position: getVal('position'),
          email: getVal('email'),
          phone: getVal('phone'),
          vacancies: getVal('vacancies'),
          interest: getVal('interest'),
          consent: !!document.getElementById('consent').checked,
          ts: new Date().toISOString()
        };

        // Простая клиентская валидация
        if(!data.name || !data.company || !data.position || !data.email || !data.phone || !data.interest || !data.consent){
          showError('Пожалуйста, заполните все обязательные поля и подтвердите согласие на обработку данных.');
          submitBtn.disabled = false;
          submitBtn.removeAttribute('aria-busy');
          return;
        }

        // Для разработки — логируем. В production замените на вызов вашего backend.
        console.log('HR Bazar lead:', data);

        try {
          // Пример отправки на сервер (раскомментируйте и замените URL на ваш endpoint)
          /*
          const resp = await fetch('https://your-backend.example/api/leads', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
            credentials: 'omit'
          });
          if(!resp.ok){
            const err = await resp.text();
            throw new Error(err || 'Сервер вернул ошибку');
          }
          */

          // Если нет сервера — показываем локальный успех
          showSuccess();
          form.reset();
        } catch (err) {
          console.error(err);
          showError(err.message || 'Не удалось отправить заявку. Попробуйте позже.');
        } finally {
          submitBtn.disabled = false;
          submitBtn.removeAttribute('aria-busy');
        }
      });

      // Smooth scroll for internal anchors (запоминаем поведение)
      document.querySelectorAll('a[href^="#"]').forEach(a=>{
        a.addEventListener('click', e=>{
          // если ссылка ведёт на текущую страницу и есть цель — скроллим
          const href = a.getAttribute('href');
          if(href && href.length > 1){
            const t = document.querySelector(href);
            if(t){
              e.preventDefault();
              t.scrollIntoView({behavior:'smooth', block:'start'});
            }
          }
        });
      });
    })();
  </script>
</body>
